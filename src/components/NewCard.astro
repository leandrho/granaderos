---

const { title, description, img, id, date} = Astro.props;
---
<article class="card-container">
    <div class="card-top">
        <img src={img} alt="card img">
    </div>
    <div class="card-bottom">
        <div class="card-content">
            <h2 class="card-title">{title}</h2>
            <p class="card-text">
                {description.substring(0,120)+'...'}
            </p>
        </div>
        <div class="card-foot">
            <div class="card-link">
                <a href=`/news/${id}` >Leer mas..</a>
            </div>
            <p class="card-date">{date}</p>
        </div>
    </div>
</article>
<style>
    .card-date{
        color: var(--graydate);
        font-size: 12px;
    }
    .card-container{
        max-width: 390px;
        height: 400px;
        display: flex;
        flex-direction: column;
        background-color: var(--gray);
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
    }
    .card-top{
        height: 45%;
    }
    img{
        height: 100%;
        width: 100%;
        object-fit: cover;
        border-radius: 5px 5px 0 0;
    }
    .card-bottom{
        height: 55%;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        font-family: var(--p-font);
        gap: 1.5rem;
    
    }
    .card-content{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .card-link a{
        color: var(--red);
        font-weight: 500;
        font-size: 16px;
    }
    .card-title{
        font-size: 18px;
    }
    .card-text{
        line-height: 1.2;
        font-size: 14px;
    }
    .card-foot{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>