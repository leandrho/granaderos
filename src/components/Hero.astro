---

const { general, title } = Astro.props;
---
<section class="hero-container">
    <div class:list={[
        "hero",
        {"hero-rugby" : general===false}

    ]}></div>
    <h1 class="hero-title">{title}</h1>
</section>

<style>
    .hero-container{
        position: relative;
    }
    .hero{
        height: 800px;
        background-image: url(/assets/images/hero1.jpg);
        background-repeat: no-repeat;
        background-size: 40% 100%;
        background-position: right;
        position: relative;
    }
    .hero-rugby{
        background-image: url(/assets/images/hero-rugby2.jpg);
    }
    .hero::after{
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        inset: 0;
        background-image: linear-gradient(to right, var(--bg-color) 60%, transparent );
        /* background-image: linear-gradient(to right, var(--dark-blue) 60%, transparent 95%, var(--dark-blue) 100%); */
    }
    .hero-title{
        position: absolute;
        color: var(--white);
        top: 50%;
        left: 10%;
        transform: translateY(-50%);
        font-size: 4rem;
        text-transform: uppercase;
        font-family: var(--p-font);
        font-weight: 500;
        max-width: 600px;

    }
    @media screen and (max-width: 1024px) {
        .hero-title{
            font-size: 3rem;
        }
        .hero{
            background-size: 50% 100%;
        }
        .hero::after{
            background-image: linear-gradient(to right, var(--bg-color) 50%, transparent );
            /* background-image: linear-gradient(to right, var(--dark-blue) 60%, transparent 95%, var(--dark-blue) 100%); */
        }
    }
    @media screen and (max-width: 768px) {
        .hero-container{
            margin-top: 4.5vh;
        }
        .hero-title{
            font-size: 2.25rem;
            max-width: 400px;
        }
        .hero{
            height: 500px;
        }
        .hero{
            background-size: 60% 100%;
        }
        .hero::after{
            background-image: linear-gradient(to right, var(--bg-color) 40%, transparent );
            /* background-image: linear-gradient(to right, var(--dark-blue) 60%, transparent 95%, var(--dark-blue) 100%); */
        }
    }
    @media screen and (max-width: 550px) {
        .hero-title{
            font-size: 2rem;
        }
        .hero{
            background-size: 75% 100%;
        }
        .hero::after{
            background-image: linear-gradient(to right, var(--bg-color) 30%, transparent );
            /* background-image: linear-gradient(to right, var(--dark-blue) 60%, transparent 95%, var(--dark-blue) 100%); */
        }
    }
</style>
