<style>
    a{
        text-decoration: none;
    }
    .container{
        width: 100%;
        min-height: 10vh;
        background-color: var(--gray);
        display: flex;
        padding-block: 2rem;
    }
    .sponsors{
        width: 100%;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }
    figure{
        max-width: 90px;
    }
    img{
        width: 100%;
        opacity: 0.8;
        filter: grayscale(1);
    }
    figcaption{
        margin-top: 0.5rem;
        text-align: center;
        font-family: var(--p-font);
        font-size: 13px;
        color: var(--black);
    }
    @media screen and (max-width: 1024px) {
        figure{
            max-width: 80px;
        }
        a{
            display: block;
            width: 18%; 
            display: flex;
            justify-content: center;
        }
      
    }
    @media screen and (max-width: 550px) {
        figure{
            max-width: 60px;
        }
        figcaption{
            font-size: 11px;
        }
    }
</style>