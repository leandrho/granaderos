<style>
    .infobar{
        min-height: 48px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding-inline: 2rem;
        background-color: var(--bg-color);
    }
    .info-container{
        display: flex;
        align-items: flex-end;
        gap: 2rem;
    }
    .logos{
        display: flex;
        gap: 0.5rem;
    }
    .info-logo{
        height: 32px;
        width: 32px;
        display: flex;
        align-items: flex-end;
    }
    .info-logo-ins{
        height: 34px;
        width: 34px;
    }
    .icon{  
        width: 100%;
        height: 100%;
    }
    .info-date{
        color: var(--white);
        font-size: 14px;
        font-family: var(--p-font);
        padding-bottom: 4px;
    }
    @media screen and (max-width: 768px) {
        .infobar{
            display: none;
        }
    }

</style>
<script is:inline >
    const  obtenerFechaActual= () => {
        const dias = ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'];
        const meses = [
            'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
            'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
        ];

        const fecha = new Date();

        const [, , dia, año] = fecha.toString().split(' ');

        const diaSemana = dias[fecha.getDay()];
        const mes = meses[fecha.getMonth()];

        const diaConCero = dia.padStart(2, '0');

        return `${diaSemana}, ${mes} ${diaConCero}, ${año}`;
    }
    const handleInfobarDate = () => {
        document.getElementById("infodate").innerText = obtenerFechaActual();
        
    };

    handleInfobarDate();
    document.addEventListener("astro:after-swap", () => handleInfobarDate());
</script>