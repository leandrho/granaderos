---
import Infobar from "./ui/Infobar.astro"
import Navbar from "./ui/Navbar.astro"
import Brand from "./ui/Brand.astro"

---
<header>
    <Brand />
    <div class="navs">
        <Infobar/>
        <Navbar/>
    </div>
</header>

<style>
    header{

        display: flex;
        border-bottom: 1px solid var(--dark-blue);
        background-color: var(--gray);
    }
    .navs{
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }
    @media screen and (max-width: 1024px) {
        header{
            min-height: 100px;
        }
    }
    @media screen and (max-width: 768px) {
       header{
            position: fixed;
            height: max-content;
            width: 100%;
            min-height: 90px;
            inset: 0;
            z-index: 100;
       }
    }
</style>
