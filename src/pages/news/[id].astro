---
import type { GetStaticPaths } from "astro";
import MainLayout from "../../layouts/MainLayout.astro"
import { news } from "../../data/news.js"


export const getStaticPaths = (() => {
	return news.map( n => ({params: {id:`${n.id}`}, props: {newo: n}}) );
}) satisfies GetStaticPaths;

const { newo }  = Astro.props;

---
<MainLayout>
    <section class="container">
        <div class="content">
            <div class="content-top">
                <header class="content-header">
                    <h2 class="title">{newo.title}</h2>
                    <p class="date">{newo.date}</p>
                </header>
              
                <p class="description">{newo.brief}</p>
    
            </div>
            <div class="content-middle">
                <figure class="pic">
                    <img src={newo.img} alt="news image">
                </figure>
            </div>
            <div class="content-bottom">
                <p class="description">{newo.description}</p>
            </div>
        </div>
    </section>
</MainLayout>

<style>
    .container{
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 2rem;
        padding-block: 30px;
    }
    .content{
        max-width: 800px;
        font-family: var(--p-font);
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .title{
        font-size: 2rem;
    }
    .date{
        font-size: 0.875rem;
    }
    .description{
        font-size: 1.2rem;
    }
    .content-top{
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .pic{
        width: 800px;
        height: 600px;
        max-height: 700px;
        display: flex;
        justify-content: flex-start;
        align-items: flex-start;
        background-color: var(--white);
    }
    .pic img{
        height: 100%;
        width: 100%;
        object-fit: contain;
    }
    @media screen and (max-width: 1024px) {
        .content{
            max-width: 95%;
        }
        .pic{
            width: 700px;
            height: 600px;
            max-height: 700px;
        }
    }
    @media screen and (max-width: 768px) {
        .container{
            margin: 0rem;
            margin-top: 100px;   
        }
        .pic{
            width: 100%;
            height: 600px;
            max-height: 700px;
        }
      
    }
    @media screen and (max-width: 550px) {
        .title{
            font-size: 1.675rem;
        }
    }
</style>