---
import MainLayout from "../../layouts/MainLayout.astro"


---
<MainLayout>
    <section>
       <div class="container">
            <div class="left">
                <h2>Contacto</h2>
                <p>
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-phone" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#111111" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
                        </svg>
                    </span> 
                    2664000000
                </p>
                <p>
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-mail" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#111111" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                            <path d="M3 7l9 6l9 -6" />
                          </svg>
                    </span>
                    clubgranaderosdekoslay@gmail.com
                </p>
                <p> 
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#111111" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
                            <path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z" />
                          </svg>
                    </span>
                    Ave Fenix - Juana Koslay - San Luis - Argentina
                </p>
                <hr class="line"/>
                <div class="redes">
                    <a href="#" aria-label="link whatsapp">
                        <svg class="icon-social" width="62" height="62" viewBox="0 0 24 24" stroke-width="1.5" stroke="#111111" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
                            <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
                          </svg>
                    </a>
                    <a href="https://www.instagram.com/granaderos_de_koslay/" aria-label="link instagram">
                        <svg class="icon-social" width="62" height="62" viewBox="0 0 24 24" stroke-width="1.5" stroke="#111111" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
                            <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                            <path d="M16.5 7.5l0 .01" />
                        </svg>
                    </a>
                </div>
            </div>
            <div class="right">
                <h2>Escribinos</h2>
                <form action=""  novalidate id="form">
                    <div class="input-box">
                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="name" autocomplete="off">
                    </div>
                    <div class="input-box">
                        <label for="phone">Telefono</label>
                        <input type="text" id="phone" name="phone" autocomplete="off">
                    </div>
                    <div class="input-box">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" autocomplete="off">
                    </div>
                    <div class="input-box">
                        <label for="message">Mensaje</label>
                        <textarea rows="7" id="message" name="message"></textarea>
                    </div>
                    <div class="input-box">
                        <button type="submit" id="submit">Enviar</button>
                    </div>
                </form>
            </div>
       </div>
    </section>

</MainLayout>
<style is:global>
    .footer{
       margin-top: 0px !important;
   }
</style>
<style>
    section{
        display: flex;
        justify-content: space-around;
        width: 100%;
        padding-block: 100px;
    }
    .container{
        width: 100%;
        display: flex;
        justify-content: space-evenly;
    }
    form{
        max-width: 500px;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .input-box{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    img{
        object-fit: cover;
        height: 100%;
        width: 100%;
    }
    input, textarea{
        outline: none;
        border: none;
        padding: 1rem;
        font-family: var(--p-font);
        font-size: 18px;
    }
    h2{
        font-family: var(--h-font);
        font-size: 2rem;
        letter-spacing: 2px;
    }
    p{
        font-family: var(--p-font);
        font-size: 20px;
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .redes{
        margin-top: 2rem;
        display: flex;
        gap: 2rem;
    }
    .right{
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        min-width: 500px;
    }
    label{
        font-family: var(--h-font);
        font-size: 20px;
        letter-spacing: 2px;
    }
    input{
        height: 2.5rem;
        border-radius: 10px;
    }
    textarea{
        border-radius: 10px;
    }
    button{
        border: none;
        outline: 0;
        background-color: var(--yellow);
        padding: 1rem;
        border-radius: 10px;
        font-family: var(--p-font);
        font-weight: 700;
        font-size: 18px;
        letter-spacing: 1px;
        cursor: pointer;
        max-width: 250px;
    }
    button:hover{
        background-color: hsl(45, 100%, 60%);
    }
    .left{
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    .line{
        border: none;
        width: 100%;
        height: 1px;
        border-bottom: 1px solid #111;
        padding-block: 1rem;
    }
    .icon-social:hover{
        stroke: var(--yellow);
    }
    @media screen and (max-width: 1024px) {
        .container{
            flex-direction: column;
            align-items: center;
            gap: 8rem;
        }
        .left{
            min-width: 500px;
        }
        h2{
            font-size: 28px;
        }
        p{
            font-size: 18px;
        }
        label{
            font-size: 18px;
        }
        button{
            font-size: 16px;
        }
        .left{
            order: 2;
        }
    }
    @media screen and (max-width: 768px) {
        .container{
            margin-top: 50px;
            gap: 5rem;
        }
        h2{
            font-size: 24px;
        }
        .icon-social{
            width: 42px;
        }
        .icon{
            width: 24px;
        }
       
        
    }
    @media screen and (max-width: 550px) {
        .container{
            margin-top: 20px;
            gap: 4rem;
        }
        .left{
            min-width: 100%;
            padding-inline: 2rem;
            
        }
        .right{
            min-width: 100%;
            padding-inline: 2rem;
            gap: 0.75rem;
        }
        form{
            max-width: 100%;
            gap: 1rem;
        }
        h2{
            text-align: center;
            font-size: 22px;
        }
        p{
            font-size: 16px;
        }
        label{
            font-size: 16px;
        }
        button{
            font-size: 15px;
            max-width: 150px;
        }
        .redes{
            justify-content: center;
        }
        input{
            height: 2rem;
            border-radius: 10px;
        }
        input, textarea{
            padding: 1rem;
            font-size: 16px;
        }
        .input-box{
            gap: 0.25rem;
        }
        .icon-social{
            width: 42px;
        }
        .icon{
            width: 24px;
        }
    }

</style>